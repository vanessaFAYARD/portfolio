{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset("build/css/admin.css") }}" rel="stylesheet">
{% endblock %}
{% block script %}
    {{ parent() }}
    <script src="{{ asset("build/js/classes/FormValidator.js") }}"></script>
{% endblock %}

{% block admin %}

    <!-- Form Admin -->
    <form action="{{ path('admin') }}" method="post" novalidate="novalidate" class="form form-admin" data-no-validation="false">
    <fieldset>
    <legend><i class="fa fa-user"></i> Identification</legend>
        {% if error %}
            <p class="error-message"><i class="fas fa-exclamation-circle"></i> Le ou les champs saisis sont incorrects.</p>
        {% endif %}
        <aside class="errors-message hidden">
            <h4><i class="fa fa-warning"></i> Il y a <span class="total-error-count">1</span> erreurs(s) dans le formulaire !</h4>
            <p class="error-message"></p>
        </aside>
        <div class="form-group">
            <label for="email">Votre email :</label>
            <input id="email" class="form-control" data-type="email" placeholder="Votre email" type="text" name="_username" value="{{ last_username }}" data-required data-name="E-mail">
            <p id="emailHelp" class="form-text text-muted">Ne partagez pas votre email Ã  quelqu'un d'autre</p>
        </div>
        <div class="form-group">
            <label for="password">Votre mot de passe :</label>
            <input id="password" class="form-control" placeholder="Votre mot de passe" type="password" name="_password" data-required data-minlength="8" data-name="Mot de passe">
        </div>
        <div class="form-group">
            <input type="submit" class="button" value="Connexion">
            <a href="{{ path('home') }}" class="button button-cancel">Annuler</a>
        </div>
    </fieldset>
    </form>
{% endblock %}


