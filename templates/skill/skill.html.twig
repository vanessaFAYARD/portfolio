{# templates/website/skill.html.twig #}
    <div class="chevron-skills chevron"></div>
    <section class="home-skills skill-position">
        <h3 class="title-section">Mes comp√©tences</h3>
        <div class="list home">
            {%  for skill in skills %}
                <div class="list-container">
                    <div class="clearfix">
                        <img src="{{ asset("build/img/skills/") }}{{ skill.image }}" class="imgResponsive img-skill" width="500" height="500" title="{{ skill.name }}" alt="{{ skill.name }}">
                        <div class="skill-details">
                            <p class="skill-name">
                                {{ skill.name }}
                                {%  if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('skill_edit', { 'id': skill.id }) }}" class="button button-more">  <i class="fas fa-edit"></i></a>
                                {% endif %}
                            </p>
                            <p class="skill-description">{{ skill.description|nl2br }}</p>
                        </div>
                    </div>
                </div>
            {%  endfor %}
        </div>
    </section>
