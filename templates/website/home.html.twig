{# templates/website/home.html.twig #}

{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
<link href="{{ asset("build/css/home.css") }}" rel="stylesheet">
{% endblock %}
{% block script %}
    {{ parent() }}
    <script src="{{ asset("build/js/classes/FormValidator.js") }}"></script>
{% endblock %}

{% block banner %}
<div id="bannerHeader">
    <section id="logoSection">
        <button type="button" class="button buttonBanner">C'est parti !</button>
    </section>
</div>
{% endblock %}

{% block body %}
    {% block aboutMe %}
    <div class="chevron-aboutMe chevron"></div>
    <div class="home-aboutMe">
        <div class="aboutMe-wrap clearfix gutter">
            <div class="aboutMe-img">
                <div class="positionTitle">
                    <p class="titleId home-titleId">Vanessa Fayard</p>
                    <img src="{{asset("build/img/profil.jpg")}}" id="home-imgId" class="imgResponsive" alt="Vanessa FAYARD développement web" title="Vanessa FAYARD développement web" width="1200" height="1198">
                </div>
            </div>
            <section class="aboutMe-text">
                <h3>Qui suis-je ?</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                    Alias assumenda autem consequatur cupiditate est eveniet exercitationem inventore?
                    Ab consequatur dolorum, facere ipsum laboriosam,
                    maiores odio omnis perspiciatis praesentium repudiandae veritatis.</p>
            </section>
        </div>
    </div>
    {% endblock %}
    {% block contactMe %}
<div class="home-contact clearfix">
    <div class="contact-position">
        <div class="contact-wrap resume-wrap">
            <div class="resume">
                <a href="{{ path('home') }}" class="button">Mon CV</a>
            </div>
        </div>
    </div>
</div>
    {% endblock %}

    {% block skills %}
    {{ render(controller(
        'App\\Controller\\SkillController::show'
    )) }}
    {% endblock %}
{% endblock %}


